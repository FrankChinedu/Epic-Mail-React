{
	"name": "epic_mail",
	"version": "1.0.0",
	"description": "mail app for exchanging messages over the internet",
	"main": "server/app.js",
	"scripts": {
		"start": "nodemon --exec babel-node server/app.js",
		"drop-db-tables": "babel-node server/model/index dropAllTables ",
		"create-db-tables": "babel-node server/model/index createAllTables ",
		"run-tables": "npm run drop-db-tables && npm run create-db-tables",
		"test": "NODE_ENV=test npm run run-tables && jest --detectOpenHandles --forceExit --coverage && npm run codeclimate-coverage",
		"backend:test": "NODE_ENV=test npm run run-tables && jest  ./server --verbose --forceExit --coverage",
		"build": "babel server --copy-files --out-dir dist",
		"serve": "node dist/app.js",
		"heroku-postbuild": "npm run build:client && npm run build",
		"lint": "eslint server/ --fix",
		"codeclimate-coverage": "CODECLIMATE_REPO_TOKEN=bccec37b7f6f09497c77a0fab52c8218278a4da36076a333e77a8851ff2819f9 codeclimate-test-reporter < lcov.info",
		"webpack": "webpack",
		"build:client": "webpack --mode=production",
		"client:test": "jest ./client --detectOpenHandles --verbose --coverage",
		"watch": "jest --watch ./client"
	},
	"engines": {
		"node": "10.10.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/FrankChinedu/Epic-Mail-React.git"
	},
	"keywords": [
		"email",
		"message"
	],
	"author": "obi chinedu frank <frankieetchy@gmail.com>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/FrankChinedu/Epic-Mail-React/issues"
	},
	"homepage": "https://github.com/FrankChinedu/Epic-Mail-React#readme",
	"dependencies": {
		"axios": "^0.19.0",
		"bcryptjs": "^2.4.3",
		"body-parser": "1.18.3",
		"cors": "2.8.5",
		"dotenv": "6.2.0",
		"dotenv-webpack": "^1.7.0",
		"enzyme": "^3.10.0",
		"enzyme-adapter-react-16": "^1.14.0",
		"express": "4.16.4",
		"formik": "^1.5.8",
		"joi": "14.3.1",
		"jsdom": "^15.1.1",
		"jsonwebtoken": "8.5.0",
		"morgan": "1.9.1",
		"moxios": "^0.4.0",
		"nodemailer": "5.1.1",
		"pg": "7.8.2",
		"react": "^16.8.6",
		"react-dom": "^16.8.6",
		"react-redux": "^7.1.0",
		"react-router-dom": "^5.0.1",
		"react-toastify": "^5.3.2",
		"redux": "^4.0.4",
		"redux-devtools-extension": "^2.13.8",
		"redux-mock-store": "^1.5.3",
		"redux-thunk": "^2.3.0",
		"swagger-ui-express": "4.0.2",
		"webpack": "^4.36.1",
		"webpack-dev-middleware": "^3.7.0",
		"webpack-dev-server": "^3.7.2",
		"webpack-hot-middleware": "^2.25.0",
		"yamljs": "0.3.0",
		"yup": "^0.27.0"
	},
