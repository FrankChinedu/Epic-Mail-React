{
	"name": "epic_mail",
	"version": "1.0.0",
	"description": "mail app for exchanging messages over the internet",
	"main": "server/app.js",
	"scripts": {
		"start": "nodemon --exec babel-node server/app.js",
		"drop-db-tables": "babel-node server/model/index dropAllTables ",
		"create-db-tables": "babel-node server/model/index createAllTables ",
		"run-tables": "npm run drop-db-tables && npm run create-db-tables",
		"custom-test":
			"NODE_ENV=test npm run run-tables && NODE_ENV=test mocha --timeout 100000 --require @babel/register server/test/*.js --exit || true",
		"test": "mocha --timeout 100000 --require @babel/register server/test/*.js --exit || true",
		"build": "babel server --copy-files --out-dir dist",
		"serve": "node dist/app.js",
		"heroku-postbuild": "npm run build:client && npm run build",
		"lint": "eslint server/ --fix",
		"generate-lcov": "nyc report --reporter=text-lcov > lcov.info",
		"coveralls-coverage": "coveralls < lcov.info",
		"codeclimate-coverage":
			"CODECLIMATE_REPO_TOKEN=bccec37b7f6f09497c77a0fab52c8218278a4da36076a333e77a8851ff2819f9 codeclimate-test-reporter < lcov.info",
		"report-html": "nyc npm run custom-test && nyc report --reporter=html --reporter=lcov",
		"coverage": "nyc npm run custom-test && npm run generate-lcov && npm run codeclimate-coverage",
		"webpack": "webpack",
		"build:client": "webpack --mode=production"
	},
	"engines": {
		"node": "10.10.0"
	},
	"nyc": {
		"exclude": ["**/*.test.js", "server/model/*"]
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/FrankChinedu/Epic-Mail-React.git"
	},
	"keywords": ["email", "message"],
	"author": "obi chinedu frank <frankieetchy@gmail.com>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/FrankChinedu/Epic-Mail-React/issues"
	},
	"homepage": "https://github.com/FrankChinedu/Epic-Mail-React#readme",
	"dependencies": {
		"bcryptjs": "^2.4.3",
		"body-parser": "1.18.3",
		"cors": "2.8.5",
		"dotenv": "6.2.0",
		"dotenv-webpack": "^1.7.0",
		"express": "4.16.4",
		"joi": "14.3.1",
		"jsonwebtoken": "8.5.0",
		"morgan": "1.9.1",
		"nodemailer": "5.1.1",
		"pg": "7.8.2",
		"react": "^16.8.6",
		"react-dom": "^16.8.6",
		"swagger-ui-express": "4.0.2",
		"webpack": "^4.36.1",
		"webpack-dev-middleware": "^3.7.0",
		"webpack-dev-server": "^3.7.2",
		"webpack-hot-middleware": "^2.25.0",
		"yamljs": "0.3.0"
	},
	"devDependencies": {
		"@babel/cli": "7.2.3",
		"@babel/core": "^7.3.4",
		"@babel/node": "7.2.2",
		"@babel/plugin-proposal-class-properties": "^7.5.5",
		"@babel/preset-env": "^7.3.4",
		"@babel/preset-react": "^7.0.0",
		"babel-loader": "^8.0.6",
		"babel-plugin-dynamic-import-node-babel-7": "2.0.7",
		"chai": "4.2.0",
		"chai-http": "4.2.1",
		"codeclimate-test-reporter": "0.5.1",
		"coveralls": "3.0.2",
		"css-loader": "^3.1.0",
		"eslint": "5.15.0",
		"eslint-config-airbnb-base": "13.1.0",
		"eslint-plugin-import": "2.16.0",
		"file-loader": "^4.1.0",
		"html-webpack-plugin": "^3.2.0",
		"istanbul": "1.1.0-alpha.1",
		"istanbul-coveralls": "1.0.3",
		"make-runnable": "1.3.6",
		"mini-css-extract-plugin": "^0.8.0",
		"mocha": "^6.2.0",
		"mocha-lcov-reporter": "1.3.0",
		"node-sass": "^4.12.0",
		"nodemon": "1.18.10",
		"nyc": "^14.1.1",
		"sass-loader": "^7.1.0",
		"webpack-cli": "^3.3.6"
	}
}
